{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/core/*": ["core/*"],
      "@/features/*": ["features/*"],
      "@/shared/*": ["shared/*"],
      "@/android/*": ["android/*"],
      "@/ios/*": ["ios/*"],
      "@/assets/*": ["assets/*"],
      "@/types/*": ["types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*",
    "android/**/*",
    "ios/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "android/build",
    "ios/build",
    "dist",
    "build"
  ]
}